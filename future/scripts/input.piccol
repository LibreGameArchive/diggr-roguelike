

def [ticks:UInt vkey:Int c:Sym];
def [ticks:UInt done:Bool dead:Bool];

handle_input [UInt Int Sym]->[UInt Bool Bool] :-

  <: \c == 'S' :> ? [ \ticks true false ] ;
  <: \c == 'Q' :> ? [ \ticks true true ] ;
  <: \c == '.' :> ? [ <: \ticks + 1 :> false false ] ;
  
  <: \c == 'h' :> ? [-1 0] move->[UInt Bool Bool]
